PEDESTRIAN_OSM = ../../osm/timescity-pedestrian.osm

RUN_OSM_FILE = run.osm
RUN_OSM_PBF_FILE = run.osm.pbf

WAY_IDS := 1124683060 1124683042 1124683043 1124683052 1124683044 1124683047 1124683061 1124683045 1306381789 1124683061 1306381782 1306381784 1307372758 1307371133 1306381783 954118563 600509237
WAY_FILTER := $(foreach id,$(WAY_IDS),@id=$(id))

all: filter

filter:
	osmfilter $(PEDESTRIAN_OSM) \
	--keep="$(WAY_FILTER)" \
	-o=$(RUN_OSM_FILE)

	@osmconvert $(RUN_OSM_FILE) -o=$(RUN_OSM_PBF_FILE)